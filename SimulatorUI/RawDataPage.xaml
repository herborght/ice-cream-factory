<Page x:Class="SimulatorUI.RawDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimulatorUI"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="750"
      Title="RawDataPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Raw Data" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="10,10,0,0"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="50 0 0 0" Height="900" Width="750">
            <TextBlock  x:Name="testBlock" TextWrapping="Wrap" />
         </ScrollViewer>
    </Grid>
</Page>
