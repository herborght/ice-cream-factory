<Window x:Class="SimulatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulatorUI"
        mc:Ignorable="d"
        Title="Ice Cream Factory" Height="1000" Width="850">
    <Grid Background="#fff1e6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Background="#f0efeb">
            <Image Width="32" Source="https://pics.freeicons.io/uploads/icons/png/17773426191535958157-512.png" />
            <TextBlock Text="Settings" FontSize="20" TextAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#e2ece9">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image Source="https://pics.freeicons.io/uploads/icons/png/2725159511543238876-512.png" Width="16"/>
                <TextBlock 
                Grid.Row="0" 
                Text="Download simulation data" 
                TextAlignment="Center"
                />
            </StackPanel>
            <TextBlock 
                Grid.Row="1" 
                Text="-------------------------------" 
                TextAlignment="Center"/>
            <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black" Grid.Row="2" Margin="5,5,5,5">
                <StackPanel Orientation="Horizontal">
                    <Image Width="15" Margin="5,0,0,0" Source="https://pics.freeicons.io/uploads/icons/png/13416400251535694869-512.png"/>
                    <TextBox TextWrapping="Wrap" MaxWidth="120" Text="Search" BorderThickness="0"/>
                </StackPanel>
            </Border>
            <StackPanel Margin="0 10">
                <CheckBox IsChecked="True" Margin="5 5">Tank temperature</CheckBox>
                <CheckBox IsChecked="True" Margin="5 5 ">Tank capacity</CheckBox>
                <CheckBox Margin="5 5">Valve flowrate</CheckBox>
                <CheckBox Margin="5 5">Ambinent temperature</CheckBox>
            </StackPanel>
            <TextBlock 
                Grid.Row="1" 
                Text="-------------------------------" 
                TextAlignment="Center"/>
            <StackPanel Margin="0 10">
                <TextBlock Text="Simulation properties" Margin="5 5"/>
                <RadioButton Margin="5 5">Show more</RadioButton>
                <RadioButton IsChecked="True" Margin="5 5">Show important</RadioButton>
                <RadioButton Margin="5 5">Show all</RadioButton>
            </StackPanel>
            <TextBlock 
                Grid.Row="1" 
                Text="-------------------------------" 
                TextAlignment="Center"/>
            <StackPanel Margin="0 10">
                <TextBlock Text="Other options" Margin="5 5"/>
                <StackPanel Orientation="Horizontal" Margin="5 5">
                    <ComboBox Margin="0,0,20,0">
                        <ComboBoxItem IsSelected="True">Style</ComboBoxItem>
                    </ComboBox>
                    <ComboBox>
                        <ComboBoxItem IsSelected="True">12px</ComboBoxItem>
                        <ComboBoxItem IsSelected="False">14px</ComboBoxItem>
                        <ComboBoxItem IsSelected="False">16px</ComboBoxItem>
                        <ComboBoxItem IsSelected="False">18px</ComboBoxItem>
                        <ComboBoxItem IsSelected="False">20px</ComboBoxItem>
                        <ComboBoxItem IsSelected="False">22px</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <Button Content="Switch View" MinWidth="80" Click="SwitchView" Margin="5 5"/>
        </StackPanel>
        
        
        <StackPanel Grid.Column="1" Grid.Row="1">
            <DockPanel>
                <Frame x:Name="_mainFrame" NavigationUIVisibility="Hidden"/>
            </DockPanel>
        </StackPanel>
    </Grid>
    
</Window>
